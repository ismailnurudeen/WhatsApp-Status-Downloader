<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp"
        app:contentPadding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rename_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Rename this File"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/rename_dialog_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:selectAllOnFocus="true"
                android:text="file name"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/rename_dialog_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/rename_dialog_input"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="Always use Default Name" />

            <Button
                android:id="@+id/rename_dialog_cancel"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/rename_dialog_checkbox"
                android:layout_marginStart="10dp"
                android:text="Cancel"
                android:textSize="16sp" />

            <Button
                android:id="@+id/rename_dialog_rename"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/rename_dialog_checkbox"
                android:layout_marginEnd="16dp"
                android:text="Download"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>